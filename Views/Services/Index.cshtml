@model IEnumerable<S186Statements.Web.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Services</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Service</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Service ID</th>
                    <th>Name</th>
                    <th>FIPS ID</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ServiceId</td>
                        <td>@item.Name</td>
                        <td>@(string.IsNullOrEmpty(item.FipsId) ? "-" : item.FipsId)</td>
                        <td>@item.CreatedAt.ToShortDateString()</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4 class="alert-heading">No Services Found</h4>
        <p>There are currently no services in the system. Click the "Create New Service" button to add your first service.</p>
    </div>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div> 