@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to S186 Statements</h1>
    <p>This is the home page. User management should be happening in the background.</p>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="alert alert-success">
            <h4>User Information</h4>
            <p><strong>Email:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
            <p><strong>Name:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value @User.FindFirst(System.Security.Claims.ClaimTypes.Surname)?.Value</p>
            <p><strong>Entra ID:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value</p>
        </div>
        
        <div class="mt-3">
            <a href="/Home/TestStrapi" class="btn btn-info">Test Strapi Connection</a>
            <a href="/Home/DebugClaims" class="btn btn-warning">Debug Claims</a>
            <a href="/Home/TestStrapiConnection" class="btn btn-danger">Test Strapi Basic Connection</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <p>You are not authenticated. Please <a href="/MicrosoftIdentity/Account/SignIn">sign in</a> to continue.</p>
        </div>
    }
</div>

